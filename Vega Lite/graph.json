{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Average maximum temperature in US",
  "projection": {"type":"mercator",
   "center": [-96, 37.5],
    "scale": 600
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JiaYiBee/project3179/main/Vega%20Lite/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type":"geoshape", "fill":"grey", "stroke": "greenyellow"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JiaYiBee/project3179/main/Vega%20Lite/testinga2.csv"
      },
      "mark": {"type":"circle"},
      "encoding": {
        "longitude": {"field": "longitude_x", "type": "quantitative"},
        "latitude": {"field": "latitude_x", "type": "quantitative"},
        "color": {
          "field": "tmax",
          "type": "quantitative",
          "title": "Temperature (°C)",
          "scale": {"scheme":"blues"}
        },
        "size":{
          "field":"prcp",
          "type": "quantitative",
          "title": "Air precipitation (mm)",
          "scale": {"domain": [0.1, 40]}
        },
        "tooltip": [
          {"field": "tmax", "type": "quantitative", "title":"Temperature (°C)"},          
          {"field": "prcp", "type": "quantitative", "title":"Precipitation (mm)"}
        ]
      }
    }
  ]
}